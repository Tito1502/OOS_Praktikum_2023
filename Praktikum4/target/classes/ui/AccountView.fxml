<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!-- Hauptfenster -->
<!-- xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
- Namespace für JavaFX Steuerelemente (AnchorPane / Listview etc) und
- Namespace "fx:" (fx:controller etc)
-->
<AnchorPane prefHeight="400.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.AccountView">
    <children>
        <Label fx:id="name" alignment="CENTER" layoutX="23.0" layoutY="77.0" text="Accountname" textAlignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="70.0">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label fx:id="balance" alignment="CENTER" layoutX="25.0" layoutY="156.0" text="Kontostand" textAlignment="CENTER" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="160.0">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Button layoutX="55.0" layoutY="319.0" mnemonicParsing="false" onAction="#goBack" prefHeight="30.0" prefWidth="74.0" text="Zurück" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" />
        <!-- ListView zur Darstellung der Transaktionen -->
        <ListView fx:id="transactionListView" layoutX="178.0" prefHeight="400.0" prefWidth="650.0">
            <!-- Menü zum Löschen von Transaktionen -->
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#deleteTransaction" text="Löschen" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </ListView>
        <!-- Button zum Hinzufügen von Transaktionen -->
        <Button layoutX="23.0" layoutY="273.0" mnemonicParsing="false" onAction="#addTransaction" text="Transaktion hinzufügen" AnchorPane.leftAnchor="10.0" />
        <!-- Dropdown-Menü zur Auswahl der Sortierart -->
        <MenuButton layoutX="49.0" layoutY="231.0" mnemonicParsing="false" text="Sortierung" AnchorPane.leftAnchor="10.0">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#ascSort" text="Aufsteigend" />
                <MenuItem mnemonicParsing="false" onAction="#descSort" text="Absteigend" />
                <MenuItem mnemonicParsing="false" onAction="#positiveSort" text="Positive" />
                <MenuItem mnemonicParsing="false" onAction="#negativeSort" text="Negative" />
            </items>
        </MenuButton>
        <Label layoutX="25.0" layoutY="33.0" text="Accountname" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="30.0" />
        <Label layoutX="24.0" layoutY="133.0" text="Kontostand" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="120.0" />
    </children>
</AnchorPane>
